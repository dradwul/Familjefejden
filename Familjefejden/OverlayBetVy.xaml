<Page
    x:Class="Familjefejden.OverlayBetVy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Familjefejden"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#222222">

    <Grid x:Name="HuvudGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <!-- Topmenyn med den ljusgråa boarden -->        
        <Grid x:Name="TopMeny" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Width="Auto" Background="#555555">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Foreground="#8A8A8A" FontSize="22" Margin="10,15,0,0">PLACERA BET</TextBlock>
            <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,10" Click="TillbakaKnapp_Klickad"
                    Height="30" Width="80" Background="#36BCDA" CornerRadius="5">Tillbaka</Button>
        </Grid>
        <!-- Bottenmenyn med funktionalitet och diverse element -->
        <Grid x:Name="BottenMeny" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="680"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">
                <ComboBox x:Name="SpelarBetLista" Height="30" Width="120" BorderThickness="0" PlaceholderText="Välj Spelare">
                    <!-- Här ska vi lägga till jsonlistan med skapade spelare för att kunna välja vem som ska betta -->
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Margin="0,50,0,0">
                <ListView x:Name="MatchBettingLista" ScrollViewer.VerticalScrollMode="Enabled">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="240"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="240"/>
                                </Grid.ColumnDefinitions>
                                <!--DUMMYVÄRDEN HÄR NEDANFÖR-->
                                <!--Vi kan eventuellt använda denna struktur senare med vårt json objekt-->
                                <Image Source="{Binding Team1Flaggor}" Width="150" Height="100" Grid.Column="0" Margin="0,0,0,10"/>

                                <TextBlock Text="{Binding Team1}" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                                <TextBox Grid.Column="0" Height="25" Width="25" VerticalAlignment="Center" HorizontalAlignment="Right" BorderThickness="0"></TextBox>

                                <TextBlock Text="vs" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                <TextBlock Text="{Binding Team2}" Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                                <TextBox Grid.Column="2" Height="25" Width="25" VerticalAlignment="Center" HorizontalAlignment="Left" BorderThickness="0"></TextBox>

                                <Image Source="{Binding Team2Flaggor}" Width="150" Height="100" Grid.Column="2" Margin="0,0,0,10"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
            <Button Grid.Row="1" Height="30" Width="100" CornerRadius="5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,20" 
                    Background="#0BE400" Click="AccepteraKnapp_Klickad">Acceptera</Button>
        </Grid>

    </Grid>
</Page>
