<Page
    x:Class="Familjefejden.OverlaySpelschema"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Familjefejden"
    xmlns:klasser="using:Familjefejden.Klasser"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#222222"
    Language="sv-SE">

    <Page.Resources>
        <klasser:DatumKonvertering x:Key="DatumKonvertering"/>
        <klasser:TidsKonvertering x:Key="TidsKonvertering"/>
    </Page.Resources>

    <Grid x:Name="HuvudGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <!-- Topmenyn med den ljusgråa boarden -->
        <Grid x:Name="TopMeny" Grid.Row="0" Grid.ColumnSpan="4" Width="Auto" Background="#555555">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Foreground="#8A8A8A" FontSize="22" Margin="10,15,0,0">SKAPA SPELSCHEMA</TextBlock>
            <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,0" 
             Height="30" Width="80" Background="#36BCDA" CornerRadius="5" Click="TillbakaKnapp_Klickad">Tillbaka</Button>
        </Grid>

        <!-- Bottenmenyn med funktionalitet och diverse element -->
        <Grid x:Name="BottenMeny" Grid.Row="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">
                <TextBlock HorizontalAlignment="Center">Datum</TextBlock>
                <DatePicker x:Name="MatchDag" Height="30" HorizontalAlignment="Center"></DatePicker>
                <TextBlock HorizontalAlignment="Center">Tid</TextBlock>
                <TimePicker x:Name="MatchStart" HorizontalAlignment="Center" ClockIdentifier="24HourClock"></TimePicker>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,410">
                <TextBlock HorizontalAlignment="Center">Hemma</TextBlock>
                <ComboBox x:Name="Hemmalag" BorderThickness="0" PlaceholderText="Välj Lag">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding LagFlagga}" Width="180" Height="70" Margin="5"/>
                                <TextBlock Text="{Binding Lag}" VerticalAlignment="Center" Foreground="White"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,470" FontSize="32">VS</TextBlock>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,350">
                <TextBlock HorizontalAlignment="Center">Borta</TextBlock>
                <ComboBox x:Name="Bortalag" BorderThickness="0" PlaceholderText="Välj Lag">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding LagFlagga}" Width="180" Height="70" Margin="5"/>
                                <TextBlock Text="{Binding Lag}" VerticalAlignment="Center" Foreground="White"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!-- Lägga in en ListView som visar alla tillagda matcher, det skall även finnas funktion för att
            ta bort tillagda matcher ifall man gör fel -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Height="240" Margin="0,0,0,50">
                <ListView x:Name="ListaSpelschema" VerticalAlignment="Top" ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="80">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="190"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding HemmaLagFlagga}" Grid.Column="0" Width="70" Height="50" Margin="-70,0,0,0"/>
                                <TextBlock Text="{Binding HemmaLag}" Grid.Column="0" Margin="30,60,100,0"/>

                                <TextBlock Text="{Binding Datum, Converter={StaticResource DatumKonvertering}}" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" Margin="0,0,0,40"/>
                                <TextBlock Text="VS" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="0,0,0,0"/>
                                <TextBlock Text="{Binding Tid, Converter={StaticResource TidsKonvertering}}" Grid.Column="1" HorizontalAlignment="Center" FontSize="16" Margin="0,50,0,0"></TextBlock>
                                
                                <Image Source="{Binding BortaLagFlagga}" Grid.Column="2" HorizontalAlignment="Right" Width="70" Height="50" Margin="0,0,0,0"/>
                                <TextBlock Text="{Binding BortaLag}" Grid.Column="2" HorizontalAlignment="Right" Margin="130,60,0,0"/>
                                <Button Grid.Column="0" Grid.Row="1" Height="35" Width="35" Margin="-10,0,0,0" Background="Transparent" Foreground="#E10202" FontSize="18" Click="TabortKnapp_Klickad">X</Button>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <Button Grid.Column="1" x:Name="LaggTillMatchKnapp" Click="LaggTillMatchKnapp_Klickad" 
                    Height="40" Background="#36BCDA" CornerRadius="5" HorizontalAlignment="Center" Margin="0,100,0,0">
                <StackPanel Orientation="Horizontal">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE710;" Margin="0,0,8,0" FontSize="14"/>
                    <TextBlock Text="Lägg till match"/>
                </StackPanel>
            </Button>

            <Button x:Name="AccepteraKnapp" Grid.Row="3" Height="40"  Width="120" CornerRadius="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,20,20,20" Background="#28C95E" Click="AccepteraKnapp_Klickad" IsEnabled="False">
                <StackPanel Orientation="Horizontal">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8FB;" Margin="0,0,8,0"/>
                    <TextBlock Text="Acceptera"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>
