<Page
    x:Class="Familjefejden.OverlaySpelschema"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Familjefejden"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#222222"
    Language="sv-SE">

    <Grid x:Name="HuvudGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <!-- Topmenyn med den ljusgråa boarden -->
        <Grid x:Name="TopMeny" Grid.Row="0" Grid.ColumnSpan="4" Width="Auto" Background="#555555">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Foreground="#8A8A8A" FontSize="22" Margin="10,15,0,0">SKAPA SPELSCHEMA</TextBlock>
            <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,10,0" 
             Height="30" Width="80" Background="#36BCDA" CornerRadius="5" Click="TillbakaKnapp_Klickad">Tillbaka</Button>
        </Grid>

        <!-- Bottenmenyn med funktionalitet och diverse element -->
        <Grid x:Name="BottenMeny" Grid.Row="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">
                <TextBlock HorizontalAlignment="Center">Datum</TextBlock>
                <DatePicker x:Name="MatchDag" Height="30" HorizontalAlignment="Center"></DatePicker>
                <TextBlock HorizontalAlignment="Center">Tid</TextBlock>
                <TimePicker x:Name="MatchStart" HorizontalAlignment="Center" ClockIdentifier="24HourClock"></TimePicker>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,380">
                <TextBlock HorizontalAlignment="Center">Hemma</TextBlock>
                <ComboBox x:Name="MatchLista" BorderThickness="0" PlaceholderText="Välj Lag">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding FlagBild}" Width="200" Height="100" Margin="5"/>
                                <TextBlock Text="{Binding Text}" VerticalAlignment="Center" Foreground="White"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,450" FontSize="32">VS</TextBlock>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,300">
                <TextBlock HorizontalAlignment="Center">Borta</TextBlock>
                <ComboBox x:Name="MatchLista2" BorderThickness="0" PlaceholderText="Välj Lag">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding FlagBild}" Width="200" Height="100" Margin="5"/>
                                <TextBlock Text="{Binding Text}" VerticalAlignment="Center" Foreground="White"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!-- Lägga in en ListView som visar alla tillagda matcher, det skall även finnas funktion för att
            ta bort tillagda matcher ifall man gör fel -->
            <StackPanel Orientation="Horizontal">
                <ListView x:Name="ListaSpelschema">

                </ListView>
            </StackPanel>

            <Button Height="35" Width="80" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,250" Background="#0BE400" CornerRadius="5" Click="LaggTillMatchKnapp_Klickad">Lägg till</Button>

            <Button Height="35" Width="80" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Background="#0BE400" CornerRadius="5" Click="AccepteraKnapp_Klickad">Acceptera</Button>

        </Grid>
    </Grid>
</Page>
