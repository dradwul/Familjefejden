<Page
    x:Class="Familjefejden.OverlayNyGrupp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Familjefejden"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#222222">


    <Grid x:Name="HuvudGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <!-- Topmenyn med den ljusgråa boarden -->
        <Grid x:Name="TopMeny" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Width="Auto" Background="#555555">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Foreground="#8A8A8A" FontSize="22" Margin="10,15,0,0">SKAPA NY GRUPP</TextBlock>
            <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,10" Click="TillbakaKnapp_Klickad"
                    Height="30" Width="80" Background="#36BCDA" CornerRadius="5">Tillbaka</Button>
        </Grid>

        <!-- Bottenmenyn med funktionalitet och diverse element -->
        <Grid x:Name="BottenMeny" Grid.Row="1">
            <StackPanel Grid.Row="0" Margin="20">
                <TextBlock Text="Lägg till ny grupp" Margin="0,0,0,8" Foreground="#8A8A8A"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="NyGrupp" PlaceholderText="Ange gruppnamn" Height="40"  Margin="0,0,10,0" BorderThickness="0" SelectionChanged="NyGrupp_SelectionChanged"/>
                    <Button Grid.Column="1" Name="LaggTillGruppKnapp" Click="NyGrupp_Klickad" Height="40" Background="#36BCDA" CornerRadius="5" IsEnabled="False">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontFamily="Segoe MDL2 Assets"  Glyph="&#xE710;"  Margin="0,0,8,0"/>
                            <TextBlock Text="Lägg till"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>

            <TextBox x:Name="GruppNamn" Height="30" Width="200" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,100"
                     Background="Transparent" BorderThickness="0" IsReadOnly="True"/>
        </Grid>

    </Grid>

</Page>
