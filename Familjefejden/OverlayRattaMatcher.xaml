<Page
    x:Class="Familjefejden.OverlayRattaMatcher"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Familjefejden"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
       Background="#222222">

    <Grid x:Name="HuvudGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <!-- Topmenyn med den ljusgråa boarden -->
        <Grid x:Name="TopMeny" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Width="Auto" Background="#555555">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Foreground="#8A8A8A" FontSize="22" Margin="10,15,0,0">RÄTTA MATCHER</TextBlock>
            <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,10" Click="TillbakaKnapp_Klickad"
                    Height="30" Width="80" Background="#36BCDA" CornerRadius="5">Tillbaka</Button>
        </Grid>
        <!-- Bottenmenyn med funktionalitet och diverse element -->
        <Grid x:Name="BottenMeny" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="680"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                        VerticalAlignment="Top" Margin="0,10,0,0">

                <ComboBox x:Name="RattaMatcherLista" Height="30" Width="120"
                          BorderThickness="0" PlaceholderText="Välj Match"
                          SelectionChanged="RattaMatcherLista_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <!--DUMMYVÄRDEN HÄR NEDANFÖR-->
                                <!--Vi kan eventuellt använda denna struktur senare med vårt json objekt-->
                                <!--<Image Source="{Binding Team1Flaggor}" Width="150" Height="100" Grid.Column="0" Margin="0,0,0,10"/>-->

                                <TextBlock Text="{Binding HemmalagNamn}" Grid.Column="0" 
                                           VerticalAlignment="Bottom" HorizontalAlignment="Center"/>

                                <TextBlock Text="vs" Grid.Column="1" VerticalAlignment="Center" 
                                           HorizontalAlignment="Center"/>

                                <TextBlock Text="{Binding BortalagNamn}" Grid.Column="2" 
                                           VerticalAlignment="Bottom" HorizontalAlignment="Center"/>

                                <!--<Image Source="{Binding Team2Flaggor}" Width="150" Height="100" Grid.Column="2" Margin="0,0,0,10"/>-->
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" Height="210">
                <ListView x:Name="VisaMatch">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="240"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="240"/>
                                </Grid.ColumnDefinitions>
                                <!--DUMMYVÄRDEN HÄR NEDANFÖR-->
                                <!--Vi kan eventuellt använda denna struktur senare med vårt json objekt-->
                                <Image Source="{Binding HemmalagFlagga}" Width="150" Height="100" 
                                       Grid.Column="0" Margin="0,0,0,150"/>
                                <TextBlock Text="{Binding HemmalagNamn}" Grid.Column="0" Margin="0,0,0,40"
                                           VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18"/>

                                <TextBlock Text="{Binding Datum}" Grid.Column="1" 
                                            VerticalAlignment="Top" HorizontalAlignment="Center" 
                                            Margin="0,10,0,0" FontSize="18"/>
                                <TextBlock Text="vs" Grid.Column="1" VerticalAlignment="Center" 
                                           HorizontalAlignment="Center" Margin="0,0,0,160" FontSize="32"/>
                                <TextBlock Text="{Binding Tid}" Grid.Column="1" 
                                           VerticalAlignment="Center" HorizontalAlignment="Center" 
                                           Margin="0,0,0,90" FontSize="18"/>

                                <TextBlock Text="{Binding BortalagNamn}" Grid.Column="2" Margin="0,93,0,0"
                                           VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="18"/>
                                <Image Source="{Binding BortalagFlagga}" Width="150" Height="100" 
                                       Grid.Column="2" Margin="0,0,0,150"/>

                                <StackPanel x:Name="RattaMatch" Orientation="Horizontal" Background="#555555" Grid.ColumnSpan="3" Height="50" Width="480" Margin="0,100,0,0" CornerRadius="5">
                                    <TextBox x:Name="RattaHemmalag" Text="{Binding RattaHemmalag}" Height="40" Width="40"
                                             VerticalAlignment="Center" HorizontalAlignment="Left"
                                             Background="White" BorderThickness="0" Margin="60,0,0,0" 
                                             Foreground="#222222" FontSize="18" FontWeight="Bold"/>     
                                    <TextBlock Text="-" Foreground="White" VerticalAlignment="Center" 
                                               HorizontalAlignment="Center" Margin="140,0,0,15" 
                                               FontSize="52" FontWeight="Bold"/>
                                    <TextBox x:Name="RattaBortalag" Text="{Binding RattaBortalag}" Height="40" Width="40" 
                                             Background="White" BorderThickness="0" Margin="135,0,0,0" 
                                             Foreground="#222222" FontSize="18" FontWeight="Bold"
                                             VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <StackPanel Grid.Row="0" Height="350" VerticalAlignment="Bottom">
                <ListView x:Name="SpelarPoangPanel" Height="330" ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Background="#555555" Height="50" Width="450" Margin="0,5,0,0" CornerRadius="5">
                                <TextBlock Text="{Binding Spelare}" HorizontalAlignment="Left" VerticalAlignment="Center"
                                           FontSize="18" Margin="10,0,0,0"/>
                                <TextBlock Text="{Binding GissningHemma}" HorizontalAlignment="Right" VerticalAlignment="Center"
                                           FontSize="22" Margin="0,0,60,0"/>
                                <TextBlock Text="-" HorizontalAlignment="Right" VerticalAlignment="Center"
                                           FontSize="42" Margin="0,0,35,8"/>
                                <TextBlock Text="{Binding GissningBorta}" HorizontalAlignment="Right" VerticalAlignment="Center"
                                           FontSize="22" Margin="0,0,15,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <Button Content="Rätta Match" Height="50" Width="120"
                                        HorizontalAlignment="Center" Margin="0,0,0,100"
                                        Click="RattaMatchKnapp_Klickad" Background="#B7FFAD"
                                        Foreground="#555555" CornerRadius="5" FontSize="12"                                        
                                        />

            <Button Content="Acceptera" Grid.Row="1" Height="30" Width="100" 
                    VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                    Margin="0,0,20,20" CornerRadius="5" 
                    Background="#0BE400" Click="AccepteraKnapp_Klickad"/>
        </Grid>

    </Grid>
</Page>