<Page
    x:Class="Familjefejden.OverlayLaggaTillLag"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Familjefejden"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#222222">


    <Grid x:Name="HuvudGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <!-- Topmenyn med den ljusgråa boarden -->
        <Grid x:Name="TopMeny" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Width="Auto" Background="#555555">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Foreground="#8A8A8A" FontSize="22" Margin="10,15,0,0">LÄGG TILL LAG</TextBlock>
            <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,10"
                    Height="30" Width="80" Background="#36BCDA" CornerRadius="5" Click="TillbakaKnapp_Klickad">Tillbaka</Button>
        </Grid>

        <!-- Bottenmenyn med funktionalitet och diverse element -->
        <Grid x:Name="BottenMeny" Grid.Row="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">
                <ComboBox x:Name="LagLista" BorderThickness="0" PlaceholderText="Välj Lag">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding LagFlagga}" Width="200" Height="100" Margin="5"/>
                                <TextBlock Text="{Binding Lag}" VerticalAlignment="Center" Foreground="White"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button Margin="10,0,0,0" CornerRadius="5" Click="TillagdKnapp_KlickadAsync">Lägg till lag</Button>
            </StackPanel>

            <StackPanel Height="500" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40,10,0">
                <ListView x:Name="TillagdaLag" Width="200">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Image Source="{Binding LagFlagga}" Grid.Row="1" Width="100" Height="70" Margin="0,20,0,10"/>
                                <TextBlock Text="{Binding Lag}" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                                <Button Height="35" Width="35" Margin="140,10,0,0" Background="Transparent" Foreground="#E10202" FontSize="18" Click="TabortKnapp_Klickad">X</Button>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <Button Height="30" Width="100" CornerRadius="5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,20" 
                    Background="#0BE400" Click="AccepteraKnapp_Klickad">Acceptera</Button>
        </Grid>

    </Grid>

</Page>